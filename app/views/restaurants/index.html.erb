<h1>Restaurant Directory</h1>

<div class="restaurants">
<% @restaurants.each do |r| %>
	<%= image_tag(r.image, size: "500x300") %>
	<p><%= link_to r.name, restaurant_path(r) %></p>
	<p><%= r.address %>
	<p><%= r.neighborhood %></p>
	<p>Price Meter: <%= r.price %></p>
	<p><%= r.summary %></p>
	<p><%= link_to r.menu, r.menu, target: '_blank' %></p>

<% end %>
</div>

<p><%= link_to "Add a Restaurant", new_restaurant_path %></p>
